<div class="col-md-6 bg-primary" style="padding:40px">
    
<%= form_for(@message, html: { class: "form-horizontal" }) do |f| %>

     <div class="form-group">
        <label for ="labelName" class="col-sm-2 control-label">名前：</label>
        <div class="col-sm-4 col-sm-6"><%= f.text_field :name, class:"form-control", id: "labelName" %></div>
     </div>
     
     <div class="form-group">
        <label for ="LabelName" class="col-sm-2 control-label">内容：</label>
        <div class="col-sm-10"><%= f.text_area :body, class:"form-control", rows:"4" %></div>
    </div>
     
     <div class="form-group">
        <label for ="LabelName" class="col-sm-2 control-label">年齢：</label>
    　   <div class="col-md-2"><%= f.text_field :age, class:"form-control" %></div>
    　</div>
     
       <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <%= f.submit "送信", class:"btn btn-lg btn-default" %>
            </div>
        </div>
    
    </form>
    
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
<% end %>
    
    
</div>
</div>