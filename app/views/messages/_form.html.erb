<div class="col-md-6 bg-primary" style="padding:40px">
    
<%= form_for(Message.new) do |f| %>

    <form class="form-horizontal">

     <div class="form-group">
        <label for ="labelName">
        名前：
        </label>
        <%= f.text_field :name, class:"form-control", id: "labelName" %>
     </div>
     
     <div class="form-group">
        <label for ="LabelName">
            内容：
        </label>
        <%= f.text_area :body, class:"form-control" %>
     </div>
     
     <div class="form-group">
        <label for ="LabelName">
            年齢：
        </label>
    　<%= f.text_field :age, class:"form-control" %>
    　</div>

     
     <div class="form-group">
        <%= f.submit "送信", class:"btn btn-lg btn-default" %>
    </div>
    
    </form>
    
<% end %>


<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
<% end %>


</div>



