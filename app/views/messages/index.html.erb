<div class="row">

<div class="col-md-6">

<div class="panel panel-default">
    <div class="panel-heading" align="center">
        メッセージ一覧
    </div>
    
    <div class="panel-body" style="line-height:2em; font-size:16px;">
        <% @messages.each do |message| %>
        <span class="label label-info"><%= message.name %></span>
        <%= message.body %>
        (<%= link_to "edit" , edit_message_path(message) %>)
        (<%= link_to "destroy" , message , method: :delete, deta: { confirm: '削除してもよろしいですか？'} %>)
        <br>
        <% end %>
    </div>
</div>

</div>

<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>
